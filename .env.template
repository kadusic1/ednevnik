# .env.template for ednevnik-backend
# Copy this file to .env and fill in the values

# Secret key for JWT authentication
JWT_SECRET=your_jwt_secret_here

# MariaDB credentials
MARIADB_USER=your_db_user
MARIADB_PASSWORD=your_db_password
MARIADB_HOST=your_db_host
MARIADB_PORT=your_db_port

# Gmail credentials for sending emails
GMAIL_ADDRESS=your_gmail_address_here
GMAIL_APP_PASSWORD=your_gmail_app_password_here

# Frontend URL for the application
FRONTEND_URL=http://localhost:3000

# .env.template for ednevnik-frontend
# Copy this file to .env.local and fill in the values
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=your_nextauth_url_here
NEXT_PUBLIC_API_BASE_URL=your_api_base_url_here
